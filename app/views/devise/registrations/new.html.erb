        <h1 class='text-center'>Sign up</h1>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {novalidate: true}) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <div class='row-fluid'>
              <%= f.input_field :email, required: true, autofocus: true, class: "span12", placeholder: "E-mail" %>
            </div>
            <div class='row-fluid'>
              <%= f.input_field :password, required: true, class: "span12", placeholder: "Password" %>
            </div>
            <div class='row-fluid'>
              <%= f.input_field :password_confirmation, required: true, class: "span12", placeholder: "Password Confirmation" %>
            </div>
          </div>

          <div class="form-actions">
            <%= link_to edit_user_registration_path do %> 
              <%= f.button :submit, "Sign up" %>
            <% end %>
          </div>
        <% end %>
