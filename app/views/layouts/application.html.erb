<!DOCTYPE html>
<html>
<head>
  <title>Lemonade</title>
  <%= stylesheet_link_tag 'application' , media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class='contrast-red '>
  <header>
    <div class="fixed">
      <div class='navbar'>
        <div class='navbar-inner'>
          <div class='container-fluid'>
            <a class='brand' href='index.html'>
<!--               <i class='icon-heart-empty'></i>
 -->    
           <img alt='D' height='23' src='/assets/diary1.jpg' id="imgAvatar" width='23' />
              <span class='hidden-phone'>E-Driary</span>
            </a>
            <a class='toggle-nav btn pull-left' href='#'>
              <i class='icon-reorder'></i>
            </a>
            <div class="themes">
              <div class="theme theme1" data-="theme1.css">&nbsp</div>
              <div class="theme theme2" data-="theme2.css">&nbsp</div>
              <div class="theme theme3" data-="theme3.css">&nbsp</div>
              <div class="theme theme4" data-="theme4.css">&nbsp</div>
            </div>
            <ul class='nav pull-right'>

              <li class='dropdown medium only-icon widget'>
                <a class='dropdown-toggle' data-toggle='dropdown' href='#'>
                  <i class='icon-rss'></i>
                  <div class='label'>5</div>
                </a>
                <ul class='dropdown-menu'>
                  <li>
                    <a href='#'>
                      <div class='widget-body'>
                        <div class='pull-left icon'>
                          <i class='icon-user text-success'></i>
                        </div>
                        <div class='pull-left text'>
                          <small>John Doe signed up</small>

                          <small class='muted'>just now</small>
                        </div>
                      </div>
                    </a>
                  </li>
                  <li class='divider'></li>
                  <li>
                    <a href='#'>
                      <div class='widget-body'>
                        <div class='pull-left text'>
                          <small>New Order #002</small>

                          <small class='muted'>3 minutes ago</small>
                        </div>
                      </div>
                    </a>
                  </li>
                  <li class='divider'></li>


                  <li class='widget-footer'>
                    <a href='#'>All notifications</a>
                  </li>
                </ul>
              </li>
              <li class='dropdown dark user-menu'>
                <a class='dropdown-toggle' data-toggle='dropdown' href='#'>
                  <img alt='Mila Kunis' height='23' src='/assets/avatar.jpg' id="imgAvatar" width='23' />
                  <span class='user-name hidden-phone'><%= current_user.email %></span>
                  <b class='caret'></b>
                </a>
                <ul class='dropdown-menu'>
                  <li>
                    <%= link_to current_user do %>
                      <i class='icon-user'></i> Profile
                    <% end %>
                  </li>
                  <li>
                    <%= link_to edit_user_registration_path(current_user) do %>
                      <i class='icon-cog'></i> Settings
                    <% end %>
                  </li>
                  <li class='divider'></li>
                  <li>
                    <%= link_to destroy_user_session_path, method: :delete do %>
                      <i class='icon-signout'></i>
                      Sign out
                    <% end %>
                  </li>
                </ul>
              </li>
            </ul>
            <form accept-charset="UTF-8" action="<%= search_users_path %>" class="navbar-search pull-right hidden-phone" method="get" />
            <div style="margin: 0; padding: 0; display: inline">
              <input name="utf8" type="hidden" value="&#x2713;" />
            </div>
            <button class="btn btn-link icon-search" name="button" type="submit"></button>
            <input autocomplete="off" class="search-query span2" id="q_header" name="q" placeholder="Search Friend..." type="text" value="" />
          </form>

        </div>
      </div>
    </div>
  </div>
</header>

<div id='wrapper' style="margin-top: 50px;">
  <div id='#'></div>
  <nav class='' id='main-nav'>
    <div class='navigation'>
      <div class='search'>
        <form accept-charset="UTF-8" action="search_results.html" method="get" />
        <div style="margin: 0; padding: 0; display: inline">
          <input name="utf8" type="hidden" value="&#x2713;" />
        </div>
        <div class='search-wrapper'>
          <input autocomplete="off" class="search-query" id="q" name="q" placeholder="Search..." type="text" value="" />
          <button class="btn btn-link icon-search" name="button" type="submit"></button>
        </div>
      </form>

    </div>


    <ul class='nav nav-stacked'>
      <li class=''>
        <a href='<%= user_path(current_user) %>'>
          <i class='icon-dashboard'></i>
          <span>Home</span>
        </a>
      </li>
      <li class=''>
        <a class='dropdown-collapse' href='#'>
          <i class='icon-edit'></i>
          <span>Following</span>
          <i class='icon-angle-down angle-down'></i>
        </a>
        <ul class='nav nav-stacked'>
          <%= content_tag_for :li, current_user.followings do |user| %>
            <a href='<%= user_path(user) %>'>
              <i class='icon-caret-right'></i>
              <span><%= user.email %></span>
            </a>
          <% end %>
        </ul>
      </li>
      <li>
        <a class='dropdown-collapse ' href='#'>
          <i class='icon-group'></i>
          <span>Followers</span>
          <i class='icon-angle-down angle-down'></i>
        </a>
        <ul class='nav nav-stacked'>
          <%= content_tag_for :li, current_user.followers do |user| %>
            <a href='<%= user_path(user) %>'>
              <i class='icon-caret-right'></i>
              <span><%= user.email %></span>
            </a>
          <% end %>
        </ul>
      </li>
      <li>
        <a class='dropdown-collapse ' href='#'>
          <i class='icon-cogs'></i>
          <span>Impotant Things</span>
          <i class='icon-angle-down angle-down'></i>
        </a>
        <ul class='nav nav-stacked'>
          <li class=''>
            <a href='meetings.html'>
              <i class='icon-bar-chart'></i>
              <span>Meetings</span>
              
            </a>
          </li>
          <li class=''>
            <a href='birthdates.html'>
              <i class='icon-envelope'></i>
              <span>Birth Dates</span>
            </a>
          </li>
<!-- 
          <%= link_to current_user do %> 
                                            <i class='icon-save'></i> 
                                            Edit
                                            <% end %>
             -->                                
          <li class=''>
            <%= link_to tasks_path do %> 
              <i class='icon-comments'></i>
              <span>ToDoList</span>
            <% end %>
          </li>
          <li class=''>
            <a href='assignements.html'>
             <i class='icon-pencil'></i>
             <span>Assignments</span>
           </a>
         </li>
         <li class=''>
          <a href='filetrees.html'>
            <i class='icon-list-ul'></i>
            <span>Alerts</span>
          </a>
        </li>

      </ul>
    </li>

  </ul>
</div>
</nav>

<section id='content'>
  <%= yield %>
</section>
</div>
</body>
</html>
