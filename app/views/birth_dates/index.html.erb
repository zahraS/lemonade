<h1>Listing birth_dates</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @birth_dates.each do |birth_date| %>
      <tr>
        <td><%= birth_date.date %></td>
        <td><%= birth_date.title %></td>
        <td><%= birth_date.user %></td>
        <td><%= link_to 'Show', birth_date %></td>
        <td><%= link_to 'Edit', edit_birth_date_path(birth_date) %></td>
        <td><%= link_to 'Destroy', birth_date, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

